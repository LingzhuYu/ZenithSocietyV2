@{
    ViewData["Title"] = "Index";
    var roleList = ViewData["roles"] as Dictionary<string, string>;
}

<h2>Role List</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <div class="form-group col-md-10">
            <input name ="roleName" id="roleName" class="form-control" />
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create Role" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Role Name
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var role in roleList) {
        <tr>
            <td>
                @role.Value
            </td>
            <td>
                <a asp-action="Edit" asp-route-roleId="@role.Key">Manage Role</a> |
                <a asp-action="Delete" asp-route-roleId="@role.Key">Delete Role</a>
            </td>
        </tr>
}
    </tbody>
</table>
